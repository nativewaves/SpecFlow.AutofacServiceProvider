{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "GitVersion: FullSemVer",
            "type": "shell",
            "command": "dotnet-gitversion",
            "args": [
                "/showvariable",
                "FullSemVer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "GitVersion: FullSemVer (local manifest)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "tool",
                "run",
                "dotnet-gitversion",
                "/showvariable",
                "FullSemVer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}